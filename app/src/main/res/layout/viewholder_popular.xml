<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout2"
    android:layout_width="220dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/recycler_bg">


    <androidx.cardview.widget.CardView
        android:id="@+id/detailsCardView"
        android:layout_width="220dp"
        android:layout_height="208dp"
        android:elevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="Content Description">

        <ImageView
            android:id="@+id/PopularImage"
            android:layout_width="220dp"
            android:layout_height="209dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pasta_meatball" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/PopularName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Rendang"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsCardView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/PopularName"
        app:layout_constraintTop_toBottomOf="@+id/PopularName"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/recommended_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/open_sans_semibold"
        android:text="4.5"
        android:textColor="#333333"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/recommended_delivery_time"
        android:layout_width="39dp"
        android:layout_height="14dp"
        android:background="@drawable/teal_background"
        android:gravity="center"
        android:text="@string/prep_minutesTxt"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/recommended_rating" />


    <ImageView
        android:id="@+id/AddBtn"
        android:layout_width="42dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        app:srcCompat="@drawable/ic_bx_cart_2"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/PriceTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="KES .250.00"
        android:textColor="#009688"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/recommended_delivery_time"
        app:layout_constraintStart_toEndOf="@+id/recommended_delivery_time"
        app:layout_constraintTop_toTopOf="@+id/recommended_delivery_time" />
</androidx.constraintlayout.widget.ConstraintLayout>




